<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
   <center>
      <AnchorPane prefHeight="220.0" prefWidth="333.0" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="txt" layoutX="21.0" layoutY="22.0" prefHeight="117.0" prefWidth="290.0" promptText="Enter Your Text Here" style="-fx-background-color: skyblue;" />
            <Button fx:id="Submit" layoutX="45.0" layoutY="150.0" mnemonicParsing="false" onAction="#Onclick_S" text="Submit" textFill="#15d715" />
            <Button fx:id="Exit" layoutX="214.0" layoutY="150.0" mnemonicParsing="false" onAction="#Onclick_E" text="Exit" textFill="#eb0404" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
